---
import Base from "@/layouts/Base.astro";
import { getSinglePage } from "@/lib/contentParser.astro";
import type { CollectionEntry } from "astro:content";
import { getEntry, getCollection } from "astro:content";

// Import components
import ServicesHero from "@/layouts/components/services/ServicesHero.astro";
import Benefits from "@/layouts/components/home/Benefits.astro";
import Features from "@/layouts/components/home/Features.astro";
import TestimonialSlider from "@/layouts/partials/TestimonialSlider.astro";
import { markdownify } from "@/lib/utils/textConverter";
import Button from "@/layouts/shortcodes/Button.tsx";
import ImageMod from "@/layouts/components/ImageMod.astro";
import { Icon } from "astro-icon/components";

export async function getStaticPaths() {
  const solutions = await getCollection("solutions");

  const paths = solutions.map((solution) => ({
    params: {
      slug: solution.id,
    },
    props: { solution },
  }));
  return paths;
}

const { solution } = Astro.props;
const {
  title,
  meta_title,
  description,
  solution_type,
  solution_category,
  hero,
  challenges,
  solution: solutionData,
  benefits,
  social_proof,
  implementation,
  regulatory,
  executive_focus,
  services_highlight,
  cta
} = solution.data;

---

<Base
  title={title}
  meta_title={meta_title}
  description={description}
>
  <!-- Hero Section -->
  <ServicesHero
    title={hero.title}
    subtitle={hero.content}
    cta={{
      label: hero.button[0]?.label || "Contact Us",
      link: hero.button[0]?.link || "/contact",
      subtext: "Strategic consultation to accelerate your transformation"
    }}
    image={hero.image}
    imageAlt={title}
    backgroundImage={hero.background_image}
  />

  <!-- Challenges/Problem Recognition Section -->
  <section class="section">
    <div class="container">
      <div class="row justify-center">
        <div class="sm:col-10 lg:col-8 text-center mb-8">
          <h2
            set:html={markdownify(challenges.title)}
            class="mb-4"
            data-aos="fade-up-sm"
          />
          <p
            set:html={markdownify(challenges.subtitle)}
            class="text-lg text-dark/70"
            data-aos="fade-up-sm"
            data-aos-delay="100"
          />
        </div>
      </div>
      <div class="row justify-center">
        <div class="col-12">
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6" data-aos="fade-up-sm" data-aos-delay="200">
            {challenges.items.map((item: any, index: number) => (
              <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100 hover:shadow-md transition-shadow">
                <div class="flex items-start space-x-4">
                  <div class="flex-shrink-0">
                    <div class="w-12 h-12 bg-gradient-to-br from-primary to-secondary rounded-lg flex items-center justify-center">
                      <span class="text-white font-semibold">!</span>
                    </div>
                  </div>
                  <div class="flex-1">
                    <h3 class="text-lg font-semibold mb-2" set:html={markdownify(item.title)} />
                    <p class="text-dark/70" set:html={markdownify(item.description)} />
                    {item.category && (
                      <span class="inline-block mt-2 px-2 py-1 bg-primary/10 text-primary text-sm rounded-full">
                        {item.category}
                      </span>
                    )}
                  </div>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Solution Overview Section -->
  <section class="section bg-gray-50">
    <div class="container">
      <div class="row items-center">
        <div class="lg:col-6 mb-8 lg:mb-0">
          <h2
            set:html={markdownify(solutionData.title)}
            class="mb-4"
            data-aos="fade-up-sm"
          />
          <p
            set:html={markdownify(solutionData.content)}
            class="text-lg mb-6"
            data-aos="fade-up-sm"
            data-aos-delay="100"
          />
          <ul class="space-y-3" data-aos="fade-up-sm" data-aos-delay="200">
            {solutionData.points.map((point: string) => (
              <li class="flex items-start space-x-3">
                <div class="flex-shrink-0 w-6 h-6 bg-gradient-to-br from-primary to-secondary rounded-full flex items-center justify-center mt-0.5">
                  <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                </div>
                <span set:html={markdownify(point)} />
              </li>
            ))}
          </ul>
        </div>
        <div class="lg:col-6" data-aos="fade-left" data-aos-delay="300">
          <ImageMod
            src={solutionData.image}
            class="rounded-xl shadow-lg"
            alt={solutionData.title}
            width={600}
            height={400}
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Benefits Section -->
  <Benefits benefits={benefits} />


  <!-- Case Studies Section (if any) -->
  {social_proof.case_studies && social_proof.case_studies.length > 0 && (
    <section class="section bg-gray-50">
      <div class="container">
        <div class="row justify-center">
          <div class="sm:col-10 lg:col-8 text-center mb-12">
            <h2 class="mb-4" data-aos="fade-up-sm">Implementation Success Stories</h2>
            <p class="text-lg text-dark/70" data-aos="fade-up-sm" data-aos-delay="100">
              Real results from organizations like yours
            </p>
          </div>
        </div>
        <div class="row">
          <div class="col-12">
            <div class="grid md:grid-cols-2 gap-8" data-aos="fade-up-sm" data-aos-delay="200">
              {social_proof.case_studies.map((caseStudy: any) => (
                <div class="bg-white rounded-xl p-8 shadow-sm border border-gray-100">
                  <div class="mb-4">
                    <h3 class="text-xl font-semibold mb-2" set:html={markdownify(caseStudy.title)} />
                    <p class="text-primary font-medium">{caseStudy.company} • {caseStudy.industry}</p>
                  </div>
                  <div class="space-y-4">
                    <div>
                      <h4 class="font-semibold text-sm uppercase tracking-wide text-dark/70 mb-2">Challenge</h4>
                      <p set:html={markdownify(caseStudy.challenge)} />
                    </div>
                    <div>
                      <h4 class="font-semibold text-sm uppercase tracking-wide text-dark/70 mb-2">Solution</h4>
                      <p set:html={markdownify(caseStudy.solution)} />
                    </div>
                    <div>
                      <h4 class="font-semibold text-sm uppercase tracking-wide text-dark/70 mb-2">Results</h4>
                      <ul class="space-y-1">
                        {caseStudy.results.map((result: string) => (
                          <li class="flex items-start space-x-2">
                            <span class="text-primary">•</span>
                            <span set:html={markdownify(result)} />
                          </li>
                        ))}
                      </ul>
                    </div>
                  </div>
                  {caseStudy.link && (
                    <div class="mt-6">
                      <Button
                        label="Read Full Case Study"
                        link={caseStudy.link}
                        style="outline"
                        size="sm"
                      />
                    </div>
                  )}
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>
  )}

  <!-- Implementation Section -->
  <section class="section">
    <div class="container">
      <div class="row justify-center">
        <div class="sm:col-10 lg:col-8 text-center mb-12">
          <h2
            set:html={markdownify(implementation.title)}
            class="mb-4"
            data-aos="fade-up-sm"
          />
          <p
            set:html={markdownify(implementation.subtitle)}
            class="text-lg text-dark/70"
            data-aos="fade-up-sm"
            data-aos-delay="100"
          />
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6" data-aos="fade-up-sm" data-aos-delay="200">
            {implementation.steps.map((step: any, index: number) => (
              <div class="text-center">
                <div class="mb-6">
                  <div class="w-16 h-16 bg-gradient-to-br from-primary to-secondary rounded-full flex items-center justify-center mx-auto mb-4">
                    <span class="text-white font-bold text-lg">{index + 1}</span>
                  </div>
                </div>
                <h3 class="text-lg font-semibold mb-3" set:html={markdownify(step.title)} />
                <p class="text-dark/70" set:html={markdownify(step.description)} />
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Highlight Section (Role-specific) -->
  {services_highlight && (
    <Features feature={services_highlight} />
  )}

  <!-- Regulatory Section (Industry-specific) -->
  {regulatory && (
    <section class="section bg-yellow-50 border-l-4 border-yellow-400">
      <div class="container">
        <div class="row justify-center">
          <div class="sm:col-10 lg:col-8">
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0">
                <div class="w-12 h-12 bg-yellow-400 rounded-lg flex items-center justify-center">
                  <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                  </svg>
                </div>
              </div>
              <div class="flex-1">
                <h3 class="text-xl font-semibold mb-4" set:html={markdownify(regulatory.title)} />
                <div class="mb-4">
                  <h4 class="font-semibold mb-2">Key Requirements:</h4>
                  <ul class="space-y-1">
                    {regulatory.requirements.map((requirement: string) => (
                      <li class="flex items-start space-x-2">
                        <span class="text-yellow-600">•</span>
                        <span>{requirement}</span>
                      </li>
                    ))}
                  </ul>
                </div>
                <p class="text-dark/70" set:html={markdownify(regulatory.compliance_note)} />
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  )}

  <!-- Executive Focus Highlights (Role-specific) -->
  {executive_focus && (
    <section class="section bg-primary/5">
      <div class="container">
        <div class="row justify-center">
          <div class="sm:col-10 lg:col-8 text-center mb-8">
            <h3 class="text-xl font-semibold mb-4" data-aos="fade-up-sm" set:html={markdownify(executive_focus.title)} />
            <p class="text-dark/70" data-aos="fade-up-sm" data-aos-delay="100" set:html={markdownify(executive_focus.subtitle)} />
          </div>
        </div>
        <div class="row">
          <div class="col-12">
            <div class="grid md:grid-cols-3 gap-6" data-aos="fade-up-sm" data-aos-delay="200">
              {executive_focus.areas.map((area: any, index: number) => (
                <div class="text-center p-6 bg-white rounded-xl shadow-sm">
                  <div class="w-12 h-12 bg-gradient-to-br from-primary to-secondary rounded-full flex items-center justify-center mx-auto mb-4">
                    <Icon name={area.icon} class="w-6 h-6 text-white" />
                  </div>
                  <h4 class="font-semibold mb-2" set:html={markdownify(area.title)} />
                  <p class="text-sm text-dark/70" set:html={markdownify(area.description)} />
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>
  )}

  <!-- Final CTA Section -->
  <section class="section pb-0">
    <div class="container">
      <div
        class={`rounded-3xl px-5 pt-7 md:px-12 md:pt-24 ${cta.background_image ? 'relative overflow-hidden min-h-[400px] flex items-center' : 'bg-gradient-to-br from-primary to-secondary'}`}
        data-aos="fade-up-sm"
      >
        {cta.background_image && (
          <>
            <div class="absolute inset-0 -z-10">
              <ImageMod
                src={cta.background_image}
                alt={cta.title}
                width={1200}
                height={400}
                class="w-full h-full object-cover"
              />
              <div class="absolute inset-0 bg-gradient-to-br from-primary/60 via-primary/55 to-secondary/60"></div>
            </div>
          </>
        )}
        <div class="row justify-center w-full">
          <div class="col-12 text-center">
            <h2
              set:html={markdownify(cta.title)}
              class={`mb-3 lg:h1 ${cta.background_image ? 'text-white drop-shadow-lg' : 'text-light'}`}
              data-aos="fade-up-sm"
            />
            <p
              set:html={markdownify(cta.content)}
              class={`mb-6 ${cta.background_image ? 'text-white/95 drop-shadow-md' : 'text-light'}`}
              data-aos="fade-up-sm"
            />
            {cta.button.enable && (
              <div data-aos="zoom-in-sm">
                <Button
                  label={cta.button.label}
                  link={cta.button.link}
                  style={cta.background_image ? "light" : "white"}
                  className="mb-8"
                />
              </div>
            )}
          </div>
        </div>
      </div>
    </div>
  </section>

</Base>