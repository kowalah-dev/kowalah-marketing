---
import Base from "@/layouts/Base.astro";
import { markdownify } from "@/lib/utils/textConverter";
import ServicesHero from "@/layouts/components/services/ServicesHero.astro";
import UpcomingWebinarCard from "@/layouts/components/webinars/UpcomingWebinarCard.astro";
import PastWebinarCard from "@/layouts/components/webinars/PastWebinarCard.astro";
import Accordion from "@/shortcodes/Accordion";
import Button from "@/shortcodes/Button";
import ImageMod from "@/layouts/components/ImageMod.astro";
import { BriefcaseIcon, LightBulbIcon, ClipboardDocumentCheckIcon, ChatBubbleLeftRightIcon } from "@heroicons/react/24/outline";

const pageData = {
  title: "Wednesday Webinars",
  meta_title: "Wednesday Webinars - Tactical ChatGPT Training for Business Leaders | Kowalah",
  description: "Join business leaders every Wednesday for tactical ChatGPT training and advanced capability discovery. Free live webinars from Kowalah, your ChatGPT deployment specialist.",

  hero: {
    title: "Wednesday Webinars",
    subtitle: "Every Wednesday at 3PM GMT, discover advanced ChatGPT capabilities for business teams across your organization. Interactive training sessions with live demonstrations.",
    content: "Join business leaders learning practical ChatGPT applications through live Q&A and real-time demonstrations.",
    background_image: "/images/webinars/wednesday_webinar_hero.png",
    badge: "Free Live Series"
  },

  upcoming_webinar: {
    title: "Shared Projects in ChatGPT: From Shadow AI to Shared Intelligence",
    date: "2025-11-05",
    displayDate: "5th November 2025",
    time: "3PM - 4PM GMT",
    webinar_id: "984 7523 9119",
    registration_link: "https://zoom.us/webinar/register/WN_gh7RuiPHSaqe5a777xJxRA",
    is_recurring: true,
    description: "Discover how Shared Projects turns ChatGPT into a team collaboration tool. Learn practical applications for sales handoffs, marketing campaigns, and cross-functional projects that drive business results.",
    topics: [
      "What most teams miss about ChatGPT's collaboration features",
      "How Shared Projects transforms team workflows and knowledge sharing",
      "Business applications: sales enablement, campaign planning, project documentation",
      "Getting teams to actually use advanced ChatGPT features"
    ],
    structure: [
      {
        segment: "Opening Topic",
        duration: "15 mins",
        description: "Shared Projects: From Shadow AI to Shared Intelligence"
      },
      {
        segment: "AI in the News",
        duration: "15 mins",
        description: "This Week in AI: The Business Edition"
      },
      {
        segment: "Live Q&A",
        duration: "30 mins",
        description: "Open discussion and audience questions"
      }
    ]
  },

  why_attend: {
    title: "Why Business Leaders Attend",
    subtitle: "Not your typical AI webinar",
    benefits: [
      {
        title: "Business Applications, Not Technical Training",
        icon: "briefcase",
        content: "Focus on sales enablement, marketing productivity, and team collaboration—not IT governance or technical features."
      },
      {
        title: "I Didn't Know It Could Do That Moments",
        icon: "lightbulb",
        content: "Discover advanced ChatGPT capabilities most teams don't know exist: Voice, Projects, Custom GPTs, and more."
      },
      {
        title: "Practical Use Cases for Your Teams",
        icon: "clipboard-check",
        content: "Walk away with specific prompts, GPT ideas, and workflows you can share with your sales, marketing, and ops teams Monday morning."
      },
      {
        title: "Ask Questions, Get Live Demonstrations",
        icon: "chat-bubble-left-right",
        content: "30 minutes of live Q&A where you can ask about your specific use cases and watch us demonstrate solutions in real-time. Interactive, not lecture-based."
      }
    ]
  },

  format: {
    title: "What to Expect",
    duration: "60 minutes",
    frequency: "Every Wednesday at 3PM GMT",
    structure_description: "Each session includes tactical ChatGPT capability demonstrations, business-focused AI news, and live Q&A where you can ask about specific use cases for your teams."
  },

  past_webinars: {
    title: "Past Sessions Archive",
    subtitle: "Catch up on previous webinars on-demand",
    webinars: []
  },

  host: {
    name: "Charlie Cowan",
    title: "Founder, Kowalah",
    bio: "Charlie helps mid-sized companies discover and implement practical ChatGPT applications, specializing in business-focused training that reveals advanced capabilities most teams don't know exist.",
    image: "/images/company/founder.png",
    credentials: [
      "Taught himself to code using AI tools, building multiple production applications",
      "Helps business leaders discover advanced ChatGPT capabilities (Voice, Projects, Custom GPTs)",
      "Runs weekly training sessions showing practical AI applications for business teams"
    ]
  },

  faq: [
    {
      question: "Who should attend these webinars?",
      answer: "Business leaders at organizations with 1,000-10,000 employees: CROs, Heads of Sales, Heads of Marketing, Department Heads, and CEOs/Managing Partners wanting tactical ChatGPT guidance for their teams."
    },
    {
      question: "What makes this different from other AI webinars?",
      answer: "Most AI webinars are passive lectures about trends and theory. Ours are interactive working sessions: 20-30 minutes of live ChatGPT demonstrations showing advanced capabilities, then 30 minutes where you ask questions about your specific use cases and watch us demonstrate solutions in real-time. You'll leave with prompts and techniques you can use Monday morning."
    },
    {
      question: "Do I need ChatGPT experience to attend?",
      answer: "No. We welcome everyone from complete beginners to daily ChatGPT users. If you're new, you'll discover capabilities you didn't know existed. If you're experienced, you'll learn advanced features (Voice, Projects, Custom GPTs) that most users haven't explored. The Q&A format means you can ask about your current skill level."
    },
    {
      question: "What if I can't attend live?",
      answer: "All registered attendees receive a recording link after the session. Past webinars are also available in our archive on this page. However, the live Q&A is where the real value happens—you can ask about your specific business challenges and get demonstrations tailored to your needs."
    },
    {
      question: "Is this a sales pitch for Kowalah services?",
      answer: "No. These are pure educational sessions focused on helping you and your teams use ChatGPT better. We'll mention Kowalah's services if directly relevant to a question, but the content is designed to give you immediate, actionable value whether you ever work with us or not."
    },
    {
      question: "Our company uses Copilot/Gemini. Is this still relevant?",
      answer: "Absolutely. Most employees are using personal ChatGPT accounts alongside official tools because of superior capabilities. Understanding ChatGPT helps you understand what's possible with AI, guides vendor selection, and shows you what your employees are already using in the shadows. The techniques transfer across AI platforms."
    },
    {
      question: "Can I invite colleagues to join?",
      answer: "Yes! We encourage you to share the registration link with other senior leaders, department heads, and team members who'd benefit. The more people from your organization attend, the more you can build internal momentum for better ChatGPT usage."
    }
  ],

  cta: {
    title: "Join the Next Wednesday Webinar",
    content: "Register now to secure your spot. Limited capacity to ensure quality discussion and Q&A time.",
    button: {
      enable: true,
      label: "Register for Free",
      link: "https://zoom.us/webinar/register/WN_gh7RuiPHSaqe5a777xJxRA"
    }
  }
};

const iconMap = {
  'briefcase': BriefcaseIcon,
  'lightbulb': LightBulbIcon,
  'clipboard-check': ClipboardDocumentCheckIcon,
  'chat-bubble-left-right': ChatBubbleLeftRightIcon
};
---

<Base
  title={pageData.title}
  meta_title={pageData.meta_title}
  description={pageData.description}
>
  <!-- Hero Section -->
  <ServicesHero
    title={pageData.hero.title}
    subtitle={pageData.hero.subtitle}
    cta={{
      label: "Register for Next Webinar",
      link: pageData.upcoming_webinar.registration_link,
      subtext: "Free live sessions every Wednesday at 3PM GMT"
    }}
    backgroundImage={pageData.hero.background_image}
  />

  <!-- Upcoming Webinar Spotlight -->
  <section class="section">
    <div class="container">
      <div class="row justify-center">
        <div class="lg:col-10">
          <UpcomingWebinarCard webinar={pageData.upcoming_webinar} />
        </div>
      </div>
    </div>
  </section>

  <!-- Why Attend (Benefits) with Video Background -->
  <section class="section relative overflow-hidden">
    <!-- Video Background -->
    <div class="absolute inset-0 -z-10">
      <video
        autoplay
        loop
        muted
        playsinline
        class="w-full h-full object-cover"
      >
        <source src="/images/webinars/wednesday_webinar_video.mp4" type="video/mp4" />
      </video>
      <div class="absolute inset-0 bg-gradient-to-b from-dark/70 via-dark/60 to-dark/70"></div>
    </div>

    <div class="container relative z-10">
      <div class="row justify-center">
        <div class="lg:col-8 text-center mb-12">
          <h2
            set:html={markdownify(pageData.why_attend.title)}
            class="mb-4 text-white drop-shadow-lg"
            data-aos="fade-up-sm"
          />
          <p
            class="text-lg text-white/90 drop-shadow-md"
            data-aos="fade-up-sm"
            data-aos-delay="100"
          >
            {pageData.why_attend.subtitle}
          </p>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6" data-aos="fade-up-sm" data-aos-delay="200">
            {pageData.why_attend.benefits.map((benefit, index) => {
              const IconComponent = iconMap[benefit.icon as keyof typeof iconMap];
              return (
                <div class="bg-white/95 backdrop-blur-sm rounded-xl p-6 shadow-lg border border-white/20 hover:shadow-xl hover:bg-white transition-all">
                  <div class="mb-4">
                    <div class="w-12 h-12 bg-gradient-to-br from-primary to-secondary rounded-lg flex items-center justify-center">
                      <IconComponent className="w-6 h-6 text-white" />
                    </div>
                  </div>
                  <h3 class="text-lg font-semibold mb-3" set:html={markdownify(benefit.title)} />
                  <p class="text-dark/70" set:html={markdownify(benefit.content)} />
                </div>
              );
            })}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Webinar Format -->
  <section class="section">
    <div class="container">
      <div class="row justify-center">
        <div class="lg:col-8 text-center">
          <h2
            set:html={markdownify(pageData.format.title)}
            class="mb-4"
            data-aos="fade-up-sm"
          />
          <p class="text-xl font-semibold text-primary mb-2" data-aos="fade-up-sm" data-aos-delay="100">
            {pageData.format.duration} • {pageData.format.frequency}
          </p>
          <p
            class="text-lg text-dark/70 mb-8"
            data-aos="fade-up-sm"
            data-aos-delay="200"
          >
            {pageData.format.structure_description}
          </p>
          <div class="bg-gradient-to-br from-primary/5 to-secondary/5 rounded-xl p-6 inline-block" data-aos="fade-up-sm" data-aos-delay="300">
            <p class="font-semibold mb-2">No vendor pitch. No IT jargon.</p>
            <p class="text-dark/70">Just practical ChatGPT applications you can use immediately.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Past Webinars Archive -->
  {pageData.past_webinars.webinars && pageData.past_webinars.webinars.length > 0 && (
    <section class="section bg-gray-50">
      <div class="container">
        <div class="row justify-center">
          <div class="lg:col-8 text-center mb-12">
            <h2
              set:html={markdownify(pageData.past_webinars.title)}
              class="mb-4"
              data-aos="fade-up-sm"
            />
            <p
              class="text-lg text-dark/70"
              data-aos="fade-up-sm"
              data-aos-delay="100"
            >
              {pageData.past_webinars.subtitle}
            </p>
          </div>
        </div>
        <div class="row">
          <div class="col-12">
            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6" data-aos="fade-up-sm" data-aos-delay="200">
              {pageData.past_webinars.webinars.map((webinar) => (
                <PastWebinarCard webinar={webinar} />
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>
  )}

  <!-- Host Section with Glassmorphism -->
  <section class="section relative overflow-hidden">
    <!-- Background Image -->
    <div class="absolute inset-0 -z-10">
      <ImageMod
        src="/images/webinars/webinar_image_1.png"
        alt="Wednesday Webinars - Engaged Learning"
        width={1920}
        height={600}
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-gradient-to-r from-dark/70 via-dark/50 to-dark/30"></div>
    </div>

    <div class="container relative z-10">
      <div class="row justify-center">
        <div class="lg:col-10">
          <!-- Glassmorphism Card -->
          <div
            class="backdrop-blur-xl bg-white/10 rounded-3xl p-8 md:p-12 border border-white/20 shadow-2xl"
            style="backdrop-filter: blur(20px); -webkit-backdrop-filter: blur(20px);"
            data-aos="fade-up-sm"
          >
            <div class="flex flex-col md:flex-row gap-8 items-start">
              <!-- Left: Content -->
              <div class="flex-1">
                <h2 class="mb-3 text-white drop-shadow-lg">Your Host</h2>
                <h3 class="text-2xl md:text-3xl font-bold text-white mb-2 drop-shadow-md">{pageData.host.name}</h3>
                <p class="text-lg text-white/90 mb-6 drop-shadow-sm">{pageData.host.title}</p>
                <p class="text-lg text-white/95 mb-8 drop-shadow-sm">{pageData.host.bio}</p>
                <ul class="space-y-4">
                  {pageData.host.credentials.map((credential) => (
                    <li class="flex items-start gap-3">
                      <svg class="w-6 h-6 text-white flex-shrink-0 mt-0.5 drop-shadow-md" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                      </svg>
                      <span class="text-white/95 drop-shadow-sm">{credential}</span>
                    </li>
                  ))}
                </ul>
              </div>

              <!-- Right: Profile Image -->
              <div class="flex-shrink-0 md:w-64">
                <div class="relative">
                  <ImageMod
                    src={pageData.host.image}
                    alt={pageData.host.name}
                    class="rounded-2xl shadow-2xl border-4 border-white/30"
                    width={300}
                    height={300}
                  />
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="section bg-gray-50">
    <div class="container">
      <div class="row justify-center">
        <div class="lg:col-8 text-center mb-12">
          <h2 class="mb-4" data-aos="fade-up-sm">Frequently Asked Questions</h2>
          <p class="text-lg text-dark/70" data-aos="fade-up-sm" data-aos-delay="100">
            Everything you need to know about Wednesday Webinars
          </p>
        </div>
      </div>
      <div class="row justify-center">
        <div class="lg:col-8" data-aos="fade-up-sm" data-aos-delay="200">
          {pageData.faq.map((item) => (
            <Accordion title={item.question} client:load>
              <p>{item.answer}</p>
            </Accordion>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Final CTA -->
  <section class="section pb-0">
    <div class="container">
      <div
        class="rounded-3xl bg-gradient-to-br from-primary to-secondary px-8 py-16 text-center"
        data-aos="fade-up-sm"
      >
        <h2
          set:html={markdownify(pageData.cta.title)}
          class="text-white mb-4"
        />
        <p
          class="text-white/90 text-lg mb-8 max-w-2xl mx-auto"
        >
          {pageData.cta.content}
        </p>
        {pageData.cta.button.enable && (
          <Button
            label={pageData.cta.button.label}
            link={pageData.cta.button.link}
            style="white"
            className="mb-0"
          />
        )}
      </div>
    </div>
  </section>
</Base>
