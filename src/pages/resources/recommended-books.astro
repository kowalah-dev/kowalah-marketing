---
import Base from "@/layouts/Base.astro";
import { client, queries, urlFor } from "@/lib/sanity";
import dateFormat from "@/lib/utils/dateFormat";
import GridBg from "@/layouts/components/GridBg.astro";

// Fetch recommended books from Sanity
let books = [];
let errorMessage = null;

try {
  books = await client.fetch(queries.books);
} catch (error) {
  console.error("Error fetching books from Sanity:", error);
  errorMessage = "Failed to load recommended books";
}

const featuredBooks = books.filter(book => book.featured);
const regularBooks = books.filter(book => !book.featured);

const title = "Recommended Books for AI Leadership";
const description = "Essential reading for CEOs and executives navigating AI transformation and Digital Chief AI Officer strategies.";
---

<Base 
  title={title} 
  meta_title={title} 
  description={description}
>
  <section class="section relative overflow-hidden pt-20 pb-0">
    <GridBg />
    <div class="container">
      <div class="text-center mb-16">
        <h1 
          class="text-4xl md:text-5xl font-bold text-text-dark mb-6"
          data-aos="fade-up-sm"
        >
          Recommended Books
        </h1>
        <p 
          class="text-lg text-gray-600 dark:text-gray-400 max-w-3xl mx-auto"
          data-aos="fade-up-sm" 
          data-aos-delay="100"
        >
          Essential reading for AI adoption, executive leadership, and digital transformation success.
        </p>
      </div>

      {errorMessage ? (
        <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded mb-8">
          <p class="font-medium">{errorMessage}</p>
          <p class="text-sm">Please try again later or contact us if the problem persists.</p>
        </div>
      ) : (
        <>
          <!-- Featured Books Section -->
          {featuredBooks.length > 0 && (
            <div class="mb-20">
              <h2 
                class="text-2xl font-semibold text-text-dark mb-8"
                data-aos="fade-up-sm"
              >
                Featured Recommendations
              </h2>
              <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                {featuredBooks.map((book, index) => (
                  <div data-aos="fade-up-sm" data-aos-delay={index * 100}>
                    <article class="bg-gray-50 dark:bg-gray-800 p-6 rounded-2xl shadow-sm h-full">
                      <div class="flex gap-6">
                        <div class="w-1/3 relative">
                          {book.coverImage && (
                            <a href={`/resources/recommended-books/${book.slug.current}`} class="group block">
                              <img
                                src={urlFor(book.coverImage).width(300).height(450).url()}
                                alt={book.title}
                                width="300"
                                height="450"
                                class="aspect-[2/3] w-full bg-gray-100 object-cover rounded-lg transition-transform duration-300 group-hover:scale-105"
                                loading="lazy"
                              />
                              <div class="absolute inset-0 bg-gray-900/0 group-hover:bg-gray-900/5 transition-colors duration-300 rounded-lg"></div>
                            </a>
                          )}
                        </div>
                        <div class="w-2/3">
                          <div class="flex items-center gap-4 text-xs mb-3">
                            <time class="text-gray-500 dark:text-gray-400">
                              {book.publishedAt ? dateFormat(book.publishedAt) : 'Recently added'}
                            </time>
                            {book.categories && book.categories.length > 0 && (
                              <span class="bg-primary/10 text-primary px-3 py-1.5 rounded-full font-medium">
                                {book.categories[0]}
                              </span>
                            )}
                          </div>
                          <div class="group">
                            <h3 class="text-xl font-semibold text-text-dark group-hover:text-primary transition-colors duration-200">
                              <a href={`/resources/recommended-books/${book.slug.current}`}>
                                {book.title}
                              </a>
                            </h3>
                            <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">by {book.author}</p>
                          </div>
                          <div class="mt-6">
                            <a 
                              href={`/resources/recommended-books/${book.slug.current}`}
                              class="inline-flex items-center text-sm font-medium text-primary hover:text-primary/80 transition-colors"
                            >
                              Read more 
                              <svg class="ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                              </svg>
                            </a>
                          </div>
                        </div>
                      </div>
                    </article>
                  </div>
                ))}
              </div>
            </div>
          )}

          <!-- All Books Grid -->
          <div class="mb-16">
            <h2 
              class="text-2xl font-semibold text-text-dark mb-8"
              data-aos="fade-up-sm"
            >
              All Recommendations
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
              {regularBooks.map((book, index) => (
                <div data-aos="fade-up-sm" data-aos-delay={index * 100}>
                  <article class="group h-full">
                    <div class="relative overflow-hidden rounded-2xl mb-6">
                      {book.coverImage && (
                        <a href={`/resources/recommended-books/${book.slug.current}`}>
                          <img
                            src={urlFor(book.coverImage).width(400).height(600).url()}
                            alt={book.title}
                            width="400"
                            height="600"
                            class="aspect-[2/3] w-full bg-gray-100 object-cover transition-transform duration-300 group-hover:scale-105"
                            loading="lazy"
                          />
                          <div class="absolute inset-0 bg-gray-900/0 group-hover:bg-gray-900/5 transition-colors duration-300"></div>
                        </a>
                      )}
                    </div>
                    <div>
                      <div class="flex items-center gap-4 text-xs mb-3">
                        <time class="text-gray-500 dark:text-gray-400">
                          {book.publishedAt ? dateFormat(book.publishedAt) : 'Recently added'}
                        </time>
                        {book.categories && book.categories.length > 0 && (
                          <span class="bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-300 px-3 py-1.5 rounded-full font-medium">
                            {book.categories[0]}
                          </span>
                        )}
                      </div>
                      <div class="group">
                        <h3 class="text-lg font-semibold text-text-dark group-hover:text-primary transition-colors duration-200 mb-2">
                          <a href={`/resources/recommended-books/${book.slug.current}`}>
                            {book.title}
                          </a>
                        </h3>
                        <p class="text-sm text-gray-600 dark:text-gray-400">by {book.author}</p>
                      </div>
                    </div>
                  </article>
                </div>
              ))}
            </div>
          </div>
        </>
      )}

      <!-- Call to Action -->
      <div class="bg-gray-50 dark:bg-gray-800 rounded-3xl p-8 text-center" data-aos="fade-up-sm">
        <h3 class="text-2xl font-semibold text-text-dark mb-4">
          Ready to Accelerate Your AI Journey?
        </h3>
        <p class="text-gray-600 dark:text-gray-400 mb-6 max-w-2xl mx-auto">
          Get expert AI leadership guidance and implementation support with Kowalah's Digital Chief AI Officer platform.
        </p>
        <a 
          href="/contact" 
          class="btn btn-primary inline-flex items-center"
        >
          Start Your AI Transformation
          <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>
</Base>