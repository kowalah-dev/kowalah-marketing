---
import Base from "@/layouts/Base.astro";
import GridBg from "@/layouts/components/GridBg.astro";
import YouTubeGallery from "@/components/YouTubeGallery.astro";
import Youtube from "@/shortcodes/Youtube";

// Executive-level AI leadership videos from your YouTube channel
const featuredVideos = [
  {
    youtubeId: "dQw4w9WgXcQ", // Replace with your actual video IDs
    title: "The Digital Chief AI Officer: Why CEOs Are Making the Switch",
    excerpt: "Discover why forward-thinking CEOs are choosing Digital Chief AI Officers over expensive executive hires. Learn about immediate availability, collective intelligence, and strategic advantages.",
    duration: "15:42",
    category: "Executive Leadership"
  },
  {
    youtubeId: "dQw4w9WgXcQ",
    title: "AI Strategy for Mid-Size Enterprises: A CEO's Roadmap",
    excerpt: "Step-by-step guidance for CEOs at 1,000-10,000 employee organizations to develop winning AI strategies without technical complexity or costly mistakes.",
    duration: "18:35",
    category: "AI Strategy"
  }
];

const allVideos = [
  ...featuredVideos,
  {
    youtubeId: "dQw4w9WgXcQ",
    title: "ChatGPT Enterprise Deployment: Executive Briefing",
    excerpt: "Complete guide to rolling out ChatGPT across your organization with high adoption rates, proper governance, and measurable ROI.",
    duration: "22:18",
    category: "Implementation"
  },
  {
    youtubeId: "dQw4w9WgXcQ",
    title: "AI Governance Framework for Business Leaders",
    excerpt: "Essential frameworks for managing AI risks while maintaining competitive speed. Perfect for executives responsible for AI oversight.",
    duration: "16:29",
    category: "Governance"
  },
  {
    youtubeId: "dQw4w9WgXcQ",
    title: "Building AI-Capable Teams at Scale",
    excerpt: "Transform your workforce into AI users with proven change management strategies and training programs that actually work.",
    duration: "20:12",
    category: "Talent Development"
  },
  {
    youtubeId: "dQw4w9WgXcQ",
    title: "AI ROI Measurement: Board-Ready Metrics",
    excerpt: "Learn how to track, measure, and report AI investment returns with metrics that satisfy boards and stakeholders.",
    duration: "14:55",
    category: "ROI & Analytics"
  },
  {
    youtubeId: "dQw4w9WgXcQ",
    title: "Digital Transformation Through AI Leadership",
    excerpt: "How AI leadership accelerates broader digital transformation initiatives and drives organizational competitive advantage.",
    duration: "17:38",
    category: "Digital Transformation"
  },
  {
    youtubeId: "dQw4w9WgXcQ",
    title: "AI Vendor Selection: Executive Decision Framework",
    excerpt: "Navigate the complex AI vendor landscape with confidence using proven evaluation frameworks and decision criteria.",
    duration: "19:24",
    category: "Vendor Management"
  },
  {
    youtubeId: "dQw4w9WgXcQ",
    title: "Expert Requests: Getting AI Work Done at Speed",
    excerpt: "See how Kowalah's Expert Requests deliver actual AI work - prompts, GPTs, training sessions - without expanding headcount.",
    duration: "12:47",
    category: "Expert Requests"
  }
];

const title = "AI Leadership Videos";
const description = "Executive training videos, strategic insights, and implementation guidance for CEOs and senior leaders driving AI transformation.";
---

<Base 
  title={title} 
  meta_title={title} 
  description={description}
>
  <section class="section relative overflow-hidden pt-20 pb-0">
    <GridBg />
    <div class="container">
      <div class="text-center mb-16">
        <h1 
          class="text-4xl md:text-5xl font-bold text-text-dark mb-6"
          data-aos="fade-up-sm"
        >
          AI Leadership Videos
        </h1>
        <p 
          class="text-lg text-gray-600 dark:text-gray-400 max-w-3xl mx-auto"
          data-aos="fade-up-sm" 
          data-aos-delay="100"
        >
          Executive training, strategic insights, and practical guidance for CEOs and senior leaders driving AI transformation at mid-size enterprises.
        </p>
      </div>

      <!-- Featured Videos Section -->
      {featuredVideos.length > 0 && (
        <div class="mb-20">
          <h2 
            class="text-2xl font-semibold text-text-dark mb-8"
            data-aos="fade-up-sm"
          >
            Featured Executive Training
          </h2>
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
            {featuredVideos.map((video, index) => (
              <div 
                class="group bg-gray-50 dark:bg-gray-800 p-6 rounded-2xl shadow-sm h-full"
                data-aos="fade-up-sm" 
                data-aos-delay={index * 100}
              >
                <div class="aspect-video rounded-xl overflow-hidden mb-6">
                  <Youtube 
                    id={video.youtubeId} 
                    title={video.title}
                    client:load
                  />
                </div>
                <div class="flex items-center gap-4 text-xs mb-4">
                  <span class="bg-primary/10 text-primary px-3 py-1.5 rounded-full font-medium">
                    {video.category}
                  </span>
                  <span class="text-gray-500 dark:text-gray-400">
                    {video.duration}
                  </span>
                </div>
                <h3 class="text-xl font-semibold text-text-dark mb-3 group-hover:text-primary transition-colors duration-200">
                  {video.title}
                </h3>
                <p class="text-gray-600 dark:text-gray-400 text-sm leading-relaxed">
                  {video.excerpt}
                </p>
              </div>
            ))}
          </div>
        </div>
      )}

      <!-- All Videos Gallery -->
      <div class="mb-16">
        <YouTubeGallery 
          title="Complete AI Leadership Library"
          subtitle="Strategic guidance, implementation insights, and executive training"
          videos={allVideos}
        />
      </div>

      <!-- Call to Action -->
      <div class="bg-gradient-to-r from-primary/5 to-secondary/5 rounded-3xl p-8 md:p-12 text-center border border-primary/10" data-aos="fade-up-sm">
        <h3 class="text-2xl md:text-3xl font-semibold text-text-dark mb-4">
          Ready to Implement What You've Learned?
        </h3>
        <p class="text-gray-600 dark:text-gray-400 mb-6 max-w-2xl mx-auto text-lg">
          Get hands-on AI leadership support with Kowalah's Digital Chief AI Officer platform. From strategy to execution, we help you turn insights into results.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href="https://app.kowalah.com/sign-up" 
            class="btn btn-primary inline-flex items-center justify-center"
          >
            Start Free Trial
            <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
          <a 
            href="/contact" 
            class="btn btn-outline inline-flex items-center justify-center"
          >
            Book Strategy Call
            <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>
</Base>