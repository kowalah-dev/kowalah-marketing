---
import Base from "@/layouts/Base.astro";
import GridBg from "@/layouts/components/GridBg.astro";
import YouTubeGallery from "@/components/YouTubeGallery.astro";
import Youtube from "@/shortcodes/Youtube";

// Executive-level AI leadership videos from your YouTube channel
const featuredVideos = [
  {
    youtubeId: "Tm-rthNYsJw",
    title: "Testimonial Gatherer - Kowalah Accelerator Custom GPT Demo",
    excerpt: "See how Kowalah's Expert Requests deliver actual AI work through custom GPT development. This demo shows a testimonial gathering GPT built for enterprise use.",
    duration: "11:00",
    category: "Expert Requests"
  },
  {
    youtubeId: "MdedjQGO-70",
    title: "Vibe Marketing: Using Claude Code to create web content",
    excerpt: "Live demonstration of AI-powered web content creation using Claude Code. Learn how to accelerate your marketing content development with AI assistance.",
    duration: "33:05",
    category: "AI Implementation"
  }
];

const allVideos = [
  ...featuredVideos,
  {
    youtubeId: "7YwNsBoZ5U8",
    title: "Google Gemini Flash 2.5 Image Preview - Live Demos",
    excerpt: "Live demonstration of Google's latest Gemini Flash 2.5 model showcasing advanced image analysis capabilities for business applications.",
    duration: "8:40",
    category: "AI Models"
  },
  {
    youtubeId: "9ZRgoK0mVoo",
    title: "ChatGPT Desktop - Instructions and Live Demo",
    excerpt: "Complete setup guide and live demonstration of ChatGPT Desktop app, showing enterprise features and integration capabilities.",
    duration: "7:49",
    category: "Implementation"
  },
  {
    youtubeId: "KgPTF0m7wbU",
    title: "ChatGPT - Project Memory - Guide and Demo",
    excerpt: "Learn how to leverage ChatGPT's Project Memory feature for organizational knowledge retention and improved AI conversations.",
    duration: "4:44",
    category: "Enterprise Features"
  },
  {
    youtubeId: "3VtjhrlRpO4",
    title: "State of AI in Business 2025 - MIT - Generic LLMs drive project success",
    excerpt: "Analysis of MIT's latest research on AI adoption in business, highlighting how generic LLMs are driving successful enterprise projects.",
    duration: "8:36",
    category: "AI Strategy"
  },
  {
    youtubeId: "w_W9qDcLewg",
    title: "Generative Engine Optimisation - How to get your company found in ChatGPT",
    excerpt: "Strategic guide to optimizing your company's visibility in AI search results and generative AI platforms for competitive advantage.",
    duration: "20:09",
    category: "AI Marketing"
  },
  {
    youtubeId: "gC663fCVoz0",
    title: "How to use ChatGPT as a people leader - CHRO/CPO/VP HR",
    excerpt: "Comprehensive guide for HR executives on leveraging AI for talent management, employee development, and organizational transformation.",
    duration: "35:00",
    category: "Executive Leadership"
  },
  {
    youtubeId: "d72PD_jN08s",
    title: "ChatGPT-5 - Launch Update for Team and Enterprise admins",
    excerpt: "Essential briefing for IT administrators and business leaders on ChatGPT-5 enterprise features, rollout strategies, and administrative considerations.",
    duration: "12:35",
    category: "Enterprise Updates"
  }
];

const title = "AI Leadership Videos";
const description = "Executive training videos, strategic insights, and implementation guidance for CEOs and senior leaders driving AI transformation.";
---

<Base 
  title={title} 
  meta_title={title} 
  description={description}
>
  <section class="section relative overflow-hidden pt-20 pb-0">
    <GridBg />
    <div class="container">
      <div class="text-center mb-16">
        <h1 
          class="text-4xl md:text-5xl font-bold text-text-dark mb-6"
          data-aos="fade-up-sm"
        >
          AI Leadership Videos
        </h1>
        <p 
          class="text-lg text-gray-600 dark:text-gray-400 max-w-3xl mx-auto"
          data-aos="fade-up-sm" 
          data-aos-delay="100"
        >
          Executive training, strategic insights, and practical guidance for CEOs and senior leaders driving AI transformation at mid-size enterprises.
        </p>
      </div>

      <!-- Featured Videos Section -->
      {featuredVideos.length > 0 && (
        <div class="mb-20">
          <h2 
            class="text-2xl font-semibold text-text-dark mb-8"
            data-aos="fade-up-sm"
          >
            Featured Executive Training
          </h2>
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
            {featuredVideos.map((video, index) => (
              <div 
                class="group bg-gray-50 dark:bg-gray-800 p-6 rounded-2xl shadow-sm h-full"
                data-aos="fade-up-sm" 
                data-aos-delay={index * 100}
              >
                <div class="aspect-video rounded-xl overflow-hidden mb-6">
                  <Youtube 
                    id={video.youtubeId} 
                    title={video.title}
                    client:load
                  />
                </div>
                <div class="flex items-center gap-4 text-xs mb-4">
                  <span class="bg-primary/10 text-primary px-3 py-1.5 rounded-full font-medium">
                    {video.category}
                  </span>
                  <span class="text-gray-500 dark:text-gray-400">
                    {video.duration}
                  </span>
                </div>
                <h3 class="text-xl font-semibold text-text-dark mb-3 group-hover:text-primary transition-colors duration-200">
                  {video.title}
                </h3>
                <p class="text-gray-600 dark:text-gray-400 text-sm leading-relaxed">
                  {video.excerpt}
                </p>
              </div>
            ))}
          </div>
        </div>
      )}

      <!-- All Videos Gallery -->
      <div class="mb-16">
        <YouTubeGallery 
          title="Complete AI Leadership Library"
          subtitle="Strategic guidance, implementation insights, and executive training"
          videos={allVideos}
        />
      </div>

      <!-- Call to Action -->
      <div class="bg-gradient-to-r from-primary/5 to-secondary/5 rounded-3xl p-8 md:p-12 text-center border border-primary/10" data-aos="fade-up-sm">
        <h3 class="text-2xl md:text-3xl font-semibold text-text-dark mb-4">
          Ready to Implement What You've Learned?
        </h3>
        <p class="text-gray-600 dark:text-gray-400 mb-6 max-w-2xl mx-auto text-lg">
          Get hands-on AI leadership support with Kowalah's Digital Chief AI Officer platform. From strategy to execution, we help you turn insights into results.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href="https://app.kowalah.com/sign-up" 
            class="btn btn-primary inline-flex items-center justify-center"
          >
            Start Free Trial
            <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
          <a 
            href="/contact" 
            class="btn btn-outline inline-flex items-center justify-center"
          >
            Book Strategy Call
            <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>
</Base>