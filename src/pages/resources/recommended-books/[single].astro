---
import Base from "@/layouts/Base.astro";
import { client, queries, urlFor } from "@/lib/sanity";
import { PortableText } from "astro-portabletext";
import dateFormat from "@/lib/utils/dateFormat";
import GridBg from "@/layouts/components/GridBg.astro";

export async function getStaticPaths() {
  // Get all books for static path generation
  let books = [];
  
  try {
    books = await client.fetch(queries.books);
  } catch (error) {
    console.error("Error fetching books for static paths:", error);
    return [];
  }
  
  return books.map((book) => ({
    params: { single: book.slug.current },
    props: { book }
  }));
}

const { book: bookPreview } = Astro.props;
const slug = Astro.params.single;

// Fetch complete book data
let book = null;
let errorMessage = null;

try {
  book = await client.fetch(queries.book(slug));
} catch (error) {
  console.error("Error fetching book from Sanity:", error);
  errorMessage = "Failed to load book details";
}

if (!book) {
  return new Response("Book not found", { status: 404 });
}

const title = book.title;
const description = `Discover insights from "${book.title}" by ${book.author} - essential reading for AI leadership and digital transformation.`;
const image = book.coverImage ? urlFor(book.coverImage).width(1200).height(630).url() : null;
---

<Base 
  title={title} 
  meta_title={`${title} by ${book.author} | Kowalah`}
  description={description}
  image={image}
>
  <section class="section relative overflow-hidden pt-20 pb-0">
    <GridBg />
    <div class="container">
      <div class="row justify-center">
        <div class="lg:col-10">
          <!-- Navigation breadcrumb -->
          <nav class="mb-8" data-aos="fade-up-sm">
            <ol class="flex items-center space-x-2 text-sm text-gray-500">
              <li><a href="/" class="hover:text-primary">Home</a></li>
              <li><span class="mx-2">/</span></li>
              <li><a href="/resources/recommended-books" class="hover:text-primary">Recommended Books</a></li>
              <li><span class="mx-2">/</span></li>
              <li class="text-text-dark">{book.title}</li>
            </ol>
          </nav>

          {errorMessage ? (
            <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded mb-8">
              <p class="font-medium">{errorMessage}</p>
            </div>
          ) : (
            <article>
              <!-- Book Header -->
              <div class="flex flex-col lg:flex-row gap-8 mb-12">
                <div class="lg:w-1/3" data-aos="fade-up-sm">
                  {book.coverImage && (
                    <div class="relative overflow-hidden rounded-2xl shadow-lg max-w-md mx-auto lg:max-w-none">
                      <img
                        src={urlFor(book.coverImage).width(400).height(600).url()}
                        alt={book.title}
                        width="400"
                        height="600"
                        class="aspect-[2/3] w-full bg-gray-100 object-cover"
                        loading="eager"
                      />
                    </div>
                  )}
                </div>
                
                <div class="lg:w-2/3" data-aos="fade-up-sm" data-aos-delay="100">
                  <!-- Book metadata -->
                  <div class="flex flex-wrap items-center gap-4 text-sm mb-4">
                    <time class="text-gray-500 dark:text-gray-400">
                      {book.publishedAt ? dateFormat(book.publishedAt) : 'Recently added'}
                    </time>
                    {book.categories && book.categories.length > 0 && (
                      book.categories.map((category) => (
                        <span class="bg-primary/10 text-primary px-3 py-1.5 rounded-full font-medium">
                          {category}
                        </span>
                      ))
                    )}
                  </div>
                  
                  <h1 class="text-3xl md:text-4xl font-bold text-text-dark mb-4">
                    {book.title}
                  </h1>
                  
                  <p class="text-xl text-gray-600 dark:text-gray-400 mb-8">
                    by {book.author}
                  </p>
                  
                  <!-- Author resources -->
                  {book.authorResources && (
                    <div class="bg-gray-50 dark:bg-gray-800 rounded-2xl p-6">
                      <h3 class="text-lg font-semibold text-text-dark mb-4">Author Resources</h3>
                      <div class="flex flex-wrap gap-4">
                        {book.authorResources.website && (
                          <a 
                            href={book.authorResources.website} 
                            target="_blank" 
                            rel="noopener noreferrer"
                            class="inline-flex items-center text-sm text-primary hover:text-primary/80 transition-colors"
                          >
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9v-9m0 0V3"></path>
                            </svg>
                            Website
                          </a>
                        )}
                        {book.authorResources.twitter && (
                          <a 
                            href={book.authorResources.twitter} 
                            target="_blank" 
                            rel="noopener noreferrer"
                            class="inline-flex items-center text-sm text-primary hover:text-primary/80 transition-colors"
                          >
                            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 24 24">
                              <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                            </svg>
                            Twitter
                          </a>
                        )}
                        {book.authorResources.linkedin && (
                          <a 
                            href={book.authorResources.linkedin} 
                            target="_blank" 
                            rel="noopener noreferrer"
                            class="inline-flex items-center text-sm text-primary hover:text-primary/80 transition-colors"
                          >
                            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 24 24">
                              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                            </svg>
                            LinkedIn
                          </a>
                        )}
                      </div>
                    </div>
                  )}
                </div>
              </div>

              <!-- Book Content -->
              <div class="prose prose-lg max-w-none dark:prose-invert" data-aos="fade-up-sm" data-aos-delay="200">
                {book.content ? (
                  <PortableText value={book.content} />
                ) : (
                  <p class="text-gray-500">No detailed content available for this book.</p>
                )}
              </div>
            </article>
          )}
        </div>
      </div>

      <!-- Back to books and CTA -->
      <div class="mt-16 pt-16 border-t border-gray-200 dark:border-gray-700">
        <div class="row">
          <div class="md:col-6" data-aos="fade-up-sm">
            <a 
              href="/resources/recommended-books" 
              class="inline-flex items-center text-primary hover:text-primary/80 transition-colors"
            >
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
              </svg>
              Back to all books
            </a>
          </div>
          <div class="md:col-6 text-left md:text-right" data-aos="fade-up-sm" data-aos-delay="100">
            <a 
              href="/contact" 
              class="btn btn-primary inline-flex items-center"
            >
              Get AI Leadership Support
              <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</Base>