---

<Base title={pageData.title} meta_title={pageData.meta_title} description={pageData.description}>
  <!-- Hero Section -->
  <section class="section pb-0">
    <div class="container">
      <div class="row justify-center">
        <div class="col-12 lg:col-8 text-center">
          <h1 set:html={markdownify(pageData.hero.title)} class="h1 mb-6" />
          <p set:html={markdownify(pageData.hero.subtitle)} class="text-lg mb-8" />
          <div class="mb-8">
            <a href={pageData.hero.cta_primary.link} class="btn btn-primary">
              {pageData.hero.cta_primary.label}
            </a>
            <p class="text-sm text-light mt-2">{pageData.hero.cta_primary.subtext}</p>
          </div>
        </div>
      </div>
      {pageData.hero.product_screenshot && (
        <div class="row justify-center">
          <div class="col-12 lg:col-10">
            <Image
              src={pageData.hero.product_screenshot}
              alt="Projects Dashboard"
              width={1200}
              height={800}
              class="rounded-lg shadow-lg mx-auto"
            />
          </div>
        </div>
      )}
    </div>
  </section>

  <!-- Problem/Solution Section -->
  <section class="section">
    <div class="container">
      <div class="row justify-center">
        <div class="col-12 lg:col-10">
          <div class="text-center mb-12">
            <h2 set:html={markdownify(pageData.problem_solution.title)} class="h2 mb-6" />
            <p set:html={markdownify(pageData.problem_solution.problem_statement)} class="text-lg mb-6 text-light" />
            <p set:html={markdownify(pageData.problem_solution.solution_overview)} class="text-lg" />
          </div>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            {pageData.problem_solution.trust_elements.map((element) => (
              <div class="text-center p-4 border rounded-lg">
                <p class="font-medium">{element}</p>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Capabilities Section -->
  <section class="section bg-theme-light">
    <div class="container">
      <div class="row justify-center">
        <div class="col-12 text-center mb-12">
          <h2 set:html={markdownify(pageData.capabilities.title)} class="h2" />
        </div>
      </div>
      <div class="row">
        {pageData.capabilities.items.map((item, index) => (
          <div class="col-12 lg:col-6 mb-8">
            <div class="h-full p-6 border rounded-lg bg-body">
              <div class="mb-4">
                <h3 class="h4 mb-3">{item.title}</h3>
                <p class="text-light mb-4">{item.description}</p>
              </div>
              <ul class="mb-4 list-disc list-inside text-sm">
                {item.details.map((detail) => (
                  <li class="mb-1">{detail}</li>
                ))}
              </ul>
              <p class="text-sm font-medium text-primary">{item.value_proposition}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- How It Works Section -->
  <section class="section">
    <div class="container">
      <div class="row justify-center">
        <div class="col-12 text-center mb-12">
          <h2 set:html={markdownify(pageData.how_it_works.title)} class="h2 mb-4" />
          <p set:html={markdownify(pageData.how_it_works.subtitle)} class="text-lg text-light" />
        </div>
      </div>
      <div class="row justify-center">
        <div class="col-12 lg:col-10">
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
            {pageData.how_it_works.steps.map((step) => (
              <div class="text-center">
                <div class="w-12 h-12 rounded-full bg-primary text-white flex items-center justify-center font-bold text-xl mb-4 mx-auto">
                  {step.step_number}
                </div>
                <h3 class="h5 mb-3">{step.title}</h3>
                <p class="text-light">{step.description}</p>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Competitive Advantage Section -->
  <section class="section bg-theme-light">
    <div class="container">
      <div class="row justify-center">
        <div class="col-12 text-center mb-12">
          <h2 set:html={markdownify(pageData.competitive_advantage.title)} class="h2 mb-4" />
          <p set:html={markdownify(pageData.competitive_advantage.subtitle)} class="text-lg mb-6 text-light" />
          <p class="text-lg font-medium">{pageData.competitive_advantage.key_message}</p>
        </div>
      </div>
      <div class="row">
        {pageData.competitive_advantage.advantages.map((advantage) => (
          <div class="col-12 lg:col-6 mb-6">
            <div class="p-6 border rounded-lg bg-body h-full">
              <h3 class="h5 mb-3 text-primary">{advantage.point}</h3>
              <p class="text-light">{advantage.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Use Cases Section -->
  <section class="section">
    <div class="container">
      <div class="row justify-center">
        <div class="col-12 text-center mb-12">
          <h2 set:html={markdownify(pageData.use_cases.title)} class="h2" />
        </div>
      </div>
      <div class="row">
        {pageData.use_cases.items.map((useCase, index) => (
          <div class="col-12 mb-8">
            <div class="p-6 border rounded-lg h-full">
              <div class="mb-4">
                <h4 class="h6 text-primary mb-2">Scenario:</h4>
                <p class="text-sm mb-4">{useCase.scenario}</p>
              </div>
              <div class="mb-4">
                <h4 class="h6 text-primary mb-2">Solution:</h4>
                <p class="text-sm mb-4">{useCase.solution}</p>
              </div>
              <div>
                <h4 class="h6 text-primary mb-2">Outcome:</h4>
                <p class="text-sm font-medium">{useCase.outcome}</p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Featured Showcase Section -->
  <section class="section bg-theme-light">
    <div class="container">
      <div class="row justify-center">
        <div class="col-12 text-center mb-12">
          <h2 set:html={markdownify(pageData.featured_showcase.title)} class="h2 mb-4" />
          <p set:html={markdownify(pageData.featured_showcase.subtitle)} class="text-lg text-light" />
        </div>
      </div>
      <AcceleratorCarousel accelerators={pageData.featured_showcase.items} />
    </div>
  </section>

  <!-- Social Proof Section -->
  <section class="section">
    <div class="container">
      <div class="row justify-center">
        <div class="col-12 text-center mb-12">
          <h2 set:html={markdownify(pageData.social_proof.title)} class="h2 mb-4" />
          <p set:html={markdownify(pageData.social_proof.subtitle)} class="text-lg text-light" />
        </div>
      </div>

      <!-- Testimonials -->
      {pageData.social_proof.testimonials && (
        <div class="row mb-12">
          {pageData.social_proof.testimonials.map((testimonial) => (
            <div class="col-12 lg:col-6 mb-6">
              <div class="p-6 border rounded-lg h-full">
                <p class="mb-4 italic">"{testimonial.quote}"</p>
                <div class="flex items-center justify-between">
                  <div>
                    <p class="font-medium">{testimonial.name}</p>
                    <p class="text-sm text-light">{testimonial.role}, {testimonial.company}</p>
                  </div>
                  <div class="text-right">
                    <p class="text-sm font-medium text-primary">{testimonial.metrics}</p>
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>
      )}

      <!-- Success Metrics -->
      <div class="row justify-center">
        <div class="col-12 lg:col-10">
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            {pageData.social_proof.success_metrics.map((metric) => (
              <div class="text-center p-6 border rounded-lg">
                <p class="font-medium">{metric}</p>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Conversion Section -->
  <section class="section bg-primary text-white">
    <div class="container">
      <div class="row justify-center">
        <div class="col-12 lg:col-8 text-center">
          <h2 set:html={markdownify(pageData.conversion.title)} class="h2 mb-4" />
          <p set:html={markdownify(pageData.conversion.subtitle)} class="text-lg mb-6" />
          <p class="mb-8">{pageData.conversion.offer_description}</p>
          <div class="mb-4">
            <a href={pageData.conversion.cta.link} class="btn btn-white">
              {pageData.conversion.cta.label}
            </a>
            <p class="text-sm mt-2 opacity-80">{pageData.conversion.cta.subtext}</p>
          </div>
        </div>
      </div>
    </div>
  </section>
</Base>