    demo: {
      type: "screenshots",
      screenshots: [
        "/images/product/screenshots/digital-caio-dashboard.png",
        "/images/product/screenshots/digital-caio-capabilities.png",
        "/images/product/screenshots/digital-caio-task-selection.png"
