---
import { markdownify } from "@/lib/utils/textConverter";
import Button from "@/shortcodes/Button";
import ImageMod from "../ImageMod.astro";

const { hero } = Astro.props;
---

<section class="section pt-[76px] pb-20 md:pb-32 relative hero overflow-hidden min-h-[600px] md:min-h-[700px] flex items-center">
  <div class="container relative">
    <div class="row justify-center">
      <div class="col-12 sm:col-10 lg:col-8 mb-8 text-center">
        <h1
          set:html={markdownify(hero.title)}
          class="hero-title max-md:[&>br]:hidden text-white drop-shadow-lg"
          data-aos="fade-up-sm"
        />
        <p
          set:html={markdownify(hero.content)}
          class="hero-content text-white/90 drop-shadow-md"
          data-aos="fade-up-sm"
          data-aos-delay="100"
        />
      </div>

      <div class="col-12 sm:col-10 lg:col-8 mb-8">
        <div
          class="flex flex-col lg:flex-row justify-center gap-4"
          data-aos="fade-up-sm"
          data-aos-delay="200"
        >
          {
            hero.button.map((button: any, i: number) => (
              <Button
                label={button.label}
                link={button.link}
                style={i % 2 === 0 ? "primary" : "light"}
                icon={i % 2 !== 0 && "FaAngleRight"}
                className="w-fit max-lg:mx-auto"
              />
            ))
          }
        </div>
      </div>

      {hero.customer && (
        <div class="col-12 sm:col-10 lg:col-8">
          <div class="flex flex-col lg:flex-row gap-5 justify-center">
            <div
              class="flex max-lg:mx-auto"
              data-aos="fade-left-sm"
              data-aos-delay="300"
            >
              {
                hero.customer.image.map((image: string, i: number) => (
                  <ImageMod
                    class={`profile-images ${i === 0 && "translate-x-0"} last:mr-[-60px]`}
                    src={image}
                    alt="customer-logo"
                    width={44}
                    height={44}
                    style={{
                      transform: `translateX(${-i * 17}px)`,
                    }}
                  />
                ))
              }
            </div>
            <p
              set:html={markdownify(hero.customer.note)}
              class="max-lg:text-center max-lg:mx-auto text-sm max-lg:[&>br]:hidden text-white/80 drop-shadow-md"
              data-aos="fade-left-sm"
              data-aos-delay="400"
            />
          </div>
        </div>
      )}
    </div>
  </div>

  <!-- Full-width background image with gradient overlay -->
  <div class="absolute inset-0 -z-10">
    <img
      src="/images/home/homepage-banner-midjourney.png"
      alt="Individual AI transformation journey"
      class="w-full h-full object-cover"
      loading="eager"
    />
    <!-- Dark gradient overlay for text readability -->
    <div class="absolute inset-0 bg-gradient-to-b from-black/60 via-black/50 to-black/70"></div>
  </div>
</section>
