---
import { markdownify } from "@/lib/utils/textConverter";

const { transformation } = Astro.props;
---

<section class="section bg-gradient-to-r from-slate-50 to-slate-100 dark:from-slate-900 dark:to-slate-800">
  <div class="container">
    <div class="row justify-center">
      <div class="lg:col-10 text-center">
        <h2
          set:html={markdownify(transformation.title)}
          class="mb-4 text-primary"
          data-aos="fade-up-sm"
        />
        <p
          set:html={markdownify(transformation.subtitle)}
          class="mb-12 text-lg text-light/70 dark:text-light/60"
          data-aos="fade-up-sm"
          data-aos-delay="100"
        />
      </div>
    </div>

    <!-- Split layout with center divider + medallion -->
    <div class="relative">
      <!-- Vertical divider -->
      <div class="hidden lg:block absolute inset-y-0 left-1/2 w-px bg-slate-200 dark:bg-slate-800"></div>
      <!-- Medallion using favicon (centered on divider) -->
      <div
        class="hidden lg:flex absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 z-10"
        data-aos="zoom-in-sm"
        data-aos-delay="250"
      >
        <div class="bg-gradient-to-r from-primary to-secondary p-[2px] rounded-full shadow-md">
          <div class="w-16 h-16 rounded-full bg-white dark:bg-black flex items-center justify-center">
            <img src="/images/favicon.svg" alt="Kowalah" class="w-8 h-8" />
          </div>
        </div>
      </div>

      <div class="row g-4 items-stretch">
      <!-- BEFORE: Fragmented AI Chaos -->
      <div class="lg:col-6">
        <div
          class="h-full p-8 rounded-2xl border-2 border-slate-200 dark:border-slate-800 bg-slate-50/60 dark:bg-slate-900/30"
          data-aos="fade-right-sm"
          data-aos-delay="120"
        >
          <div class="mb-6 text-center">
            <div class="inline-flex items-center justify-center w-16 h-16 mb-4 rounded-full bg-slate-100 dark:bg-slate-800">
              <svg class="w-8 h-8 text-slate-500 dark:text-slate-300" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
              </svg>
            </div>
            <h3 class="text-xl font-bold text-slate-800 dark:text-slate-200 mb-2">BEFORE: Fragmented AI Chaos</h3>
            <p class="text-sm text-slate-600 dark:text-slate-300 italic">The typical state when we first meet organizations</p>
          </div>

          <div class="space-y-6">
            <div>
              <h4 class="font-semibold text-slate-800 dark:text-slate-200 mb-3">Organizational Level:</h4>
              <ul class="space-y-2 text-sm text-slate-700 dark:text-slate-300">
                {transformation.before.organizational.map((item: string, i: number) => (
                  <li class="flex items-start" data-aos="fade-up-sm" data-aos-delay={150 + i * 60}>
                    <svg class="w-4 h-4 text-slate-400 mt-0.5 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                    </svg>
                    <span set:html={markdownify(item)} />
                  </li>
                ))}
              </ul>
            </div>

            <div>
              <h4 class="font-semibold text-slate-800 dark:text-slate-200 mb-3">Individual Level:</h4>
              <ul class="space-y-2 text-sm text-slate-700 dark:text-slate-300">
                {transformation.before.individual.map((item: string, i: number) => (
                  <li class="flex items-start" data-aos="fade-up-sm" data-aos-delay={150 + i * 60}>
                    <svg class="w-4 h-4 text-slate-400 mt-0.5 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                    </svg>
                    <span set:html={markdownify(item)} />
                  </li>
                ))}
              </ul>
            </div>
          </div>
        </div>
      </div>

      <!-- AFTER: Strategic AI-First Organization -->
      <div class="lg:col-6">
        <div
          class="h-full p-8 rounded-2xl border-2 border-primary/30 bg-gradient-to-br from-primary/5 to-secondary/5 dark:from-primary/10 dark:to-secondary/10 dark:border-primary/30"
          data-aos="fade-left-sm"
          data-aos-delay="180"
        >
          <div class="mb-6 text-center">
            <div class="inline-flex items-center justify-center w-16 h-16 mb-4 rounded-full bg-primary/10 dark:bg-primary/20">
              <svg class="w-8 h-8 text-primary" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
            </div>
            <h3 class="text-xl font-bold text-primary mb-2">AFTER: Strategic AI First</h3>
            <p class="text-sm text-primary/80 italic">What organizations look like after our 16-week transformation</p>
          </div>

          <div class="space-y-6">
            <div>
              <h4 class="font-semibold text-primary mb-3">Organizational Level:</h4>
              <ul class="space-y-2 text-sm text-slate-700 dark:text-slate-300">
                {transformation.after.organizational.map((item: string, i: number) => (
                  <li class="flex items-start" data-aos="fade-up-sm" data-aos-delay={150 + i * 60}>
                    <svg class="w-4 h-4 text-primary mt-0.5 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                    <span set:html={markdownify(item)} />
                  </li>
                ))}
              </ul>
            </div>

            <div>
              <h4 class="font-semibold text-primary mb-3">Individual Level:</h4>
              <ul class="space-y-2 text-sm text-slate-700 dark:text-slate-300">
                {transformation.after.individual.map((item: string, i: number) => (
                  <li class="flex items-start" data-aos="fade-up-sm" data-aos-delay={150 + i * 60}>
                    <svg class="w-4 h-4 text-primary mt-0.5 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                    <span set:html={markdownify(item)} />
                  </li>
                ))}
              </ul>
            </div>
          </div>
        </div>
      </div>
      </div>
    </div>
  
    <!-- Key Mindset Shift -->
    <div class="row justify-center mt-16">
      <div class="lg:col-8 text-center">
        <div
          class="p-8 rounded-2xl bg-gradient-to-r from-primary/5 to-secondary/5 dark:from-primary/10 dark:to-secondary/10 border border-primary/20"
          data-aos="zoom-in"
          data-aos-delay="400"
        >
          <h3 class="text-xl font-bold text-primary mb-4">THE KEY MINDSET SHIFT</h3>
          <div class="flex flex-col md:flex-row items-center justify-center gap-4 text-lg">
            <div class="px-6 py-3 rounded-lg bg-slate-100 dark:bg-slate-800 text-slate-800 dark:text-slate-200 border border-slate-200 dark:border-slate-700">
              <strong>From:</strong> "{transformation.mindset_shift.from}"
            </div>
            <div class="text-2xl text-primary">â†’</div>
            <div class="px-6 py-3 rounded-lg text-primary bg-gradient-to-r from-primary/20 to-secondary/20 border border-primary/30">
              <strong>To:</strong> "{transformation.mindset_shift.to}"
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
