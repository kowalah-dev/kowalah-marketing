---
import { markdownify } from "@/lib/utils/textConverter";

const { program_depth } = Astro.props;
---

<section class="section">
  <div class="container">
    <div class="row justify-center">
      <div class="lg:col-10 text-center">
        <h2
          set:html={markdownify(program_depth.title)}
          class="mb-4"
          data-aos="fade-up-sm"
        />
        <p
          set:html={markdownify(program_depth.subtitle)}
          class="mb-16 text-lg text-slate-600 dark:text-slate-300"
          data-aos="fade-up-sm"
          data-aos-delay="100"
        />
      </div>
    </div>

    <div class="row g-6 gap-y-6">
      {program_depth.categories.map((category: any, categoryIndex: number) => (
        <div class="lg:col-6" data-aos="fade-up-sm" data-aos-delay={300 + (categoryIndex * 100)}>
          <!-- Interactive flip card with accessible toggle -->
          <div class="group relative h-full min-h-[400px] md:min-h-[480px] [perspective:1200px]">
            <!-- Mobile/keyboard toggle -->
            <input id={`pd-toggle-${categoryIndex}`} type="checkbox" class="peer sr-only" aria-hidden="true" />

            <div class="relative h-full transition-transform duration-500 [transform-style:preserve-3d] group-hover:[transform:rotateY(180deg)] group-focus-within:[transform:rotateY(180deg)] peer-checked:[transform:rotateY(180deg)] motion-reduce:transition-none motion-reduce:transform-none">
              <!-- FRONT: Program elements with descriptions -->
              <div class="absolute inset-0 p-8 rounded-2xl bg-gradient-to-br from-white to-gray-50 dark:from-gray-800 dark:to-gray-900 border border-gray-200 dark:border-gray-700 shadow-lg hover:shadow-xl transition-shadow duration-300 [backface-visibility:hidden] overflow-auto">
                <!-- Category Header -->
                <div class="mb-6">
                  <div class="flex items-center mb-4">
                    <div class="inline-flex items-center justify-center w-12 h-12 mr-4 rounded-xl bg-primary text-white ring-2 ring-primary/20">
                      <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
                        {category.icon === 'strategy' && (
                          <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zm0 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V8zm0 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1v-2z" clip-rule="evenodd" />
                        )}
                        {category.icon === 'people' && (
                          <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-3a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v3h-3zM4.75 12.094A5.973 5.973 0 004 15v3H1v-3a3 3 0 013.75-2.906z" />
                        )}
                        {category.icon === 'technical' && (
                          <path fill-rule="evenodd" d="M12.316 3.051a1 1 0 01.633 1.265l-4 12a1 1 0 11-1.898-.632l4-12a1 1 0 011.265-.633zM5.707 6.293a1 1 0 010 1.414L3.414 10l2.293 2.293a1 1 0 11-1.414 1.414l-3-3a1 1 0 010-1.414l3-3a1 1 0 011.414 0zm8.586 0a1 1 0 011.414 0l3 3a1 1 0 010 1.414l-3 3a1 1 0 11-1.414-1.414L16.586 10l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                        )}
                        {category.icon === 'training' && (
                          <path d="M10.394 2.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84L5.25 8.051a.999.999 0 01.356-.257l4-1.714a1 1 0 11.788 1.838L7.667 9.088l1.94.831a1 1 0 00.787 0l7-3a1 1 0 000-1.838l-7-3zM3.31 9.397L5 10.12v4.102a8.969 8.969 0 00-1.05-.174 1 1 0 01-.89-.89 11.115 11.115 0 01.25-3.762zM9.3 16.573A9.026 9.026 0 007 14.935v-3.957l1.818.78a3 3 0 002.364 0l5.508-2.361a11.026 11.026 0 01.25 3.762 1 1 0 01-.89.89 8.968 8.968 0 00-5.35 2.524 1 1 0 01-1.4 0zM6 18a1 1 0 001-1v-2.065a8.935 8.935 0 00-2-.712V17a1 1 0 001 1z" />
                        )}
                        {!category.icon && (
                          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                        )}
                      </svg>
                    </div>
                    <div>
                      <h3 class="text-xl font-bold text-dark dark:text-light mb-1">{category.title}</h3>
                    </div>
                  </div>
                </div>

                <!-- Elements with descriptions -->
                <div class="space-y-3">
                  {category.elements.map((element: any, elementIndex: number) => (
                    <div class="flex items-start gap-3">
                      <div class="w-2 h-2 bg-primary rounded-full mt-2 flex-shrink-0"></div>
                      <div>
                        <h4 class="font-semibold text-slate-800 dark:text-slate-200 text-sm mb-1">{element.name}</h4>
                        <p class="text-xs text-slate-600 dark:text-slate-400 leading-relaxed">{element.description}</p>
                      </div>
                    </div>
                  ))}
                </div>

                <!-- Hover hint -->
                <p class="mt-6 text-xs text-primary/70 hidden md:block">Hover to see why it matters</p>

                <!-- Mobile toggle hint -->
                <label for={`pd-toggle-${categoryIndex}`} class="mt-6 inline-flex items-center gap-2 text-primary text-sm cursor-pointer md:hidden">
                  <span>Why it matters</span>
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 11.06l3.71-3.83a.75.75 0 011.08 1.04l-4.24 4.38a.75.75 0 01-1.08 0L5.21 8.27a.75.75 0 01.02-1.06z" clip-rule="evenodd" />
                  </svg>
                </label>
              </div>

              <!-- BACK: Why it matters -->
              <div class="absolute inset-0 p-8 rounded-2xl bg-gradient-to-br from-primary/5 to-secondary/5 dark:from-primary/10 dark:to-secondary/10 border border-primary/30 shadow-lg [transform:rotateY(180deg)] [backface-visibility:hidden] overflow-auto">
                <div class="mb-6 flex items-center gap-3">
                  <div class="w-10 h-10 rounded-lg bg-primary text-white flex items-center justify-center ring-2 ring-primary/30">
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zM9 7a1 1 0 112 0v4a1 1 0 11-2 0V7zm1 6a1.5 1.5 0 100 3 1.5 1.5 0 000-3z" clip-rule="evenodd" />
                    </svg>
                  </div>
                  <div>
                    <h3 class="text-lg font-bold text-primary">Why {category.title} Matters</h3>
                    <p class="text-xs text-slate-700 dark:text-slate-300">The strategic value and business impact</p>
                  </div>
                </div>

                <div class="prose prose-sm  max-w-none [&_p]:text-sm [&_p]:text-slate-800 dark:[&_p]:text-slate-200 [&_p]:leading-relaxed [&_p]:mb-3 [&_p:last-child]:mb-0">
                  <div set:html={markdownify(category.why_matters)} />
                </div>

                <!-- Desktop hint -->
                <p class="mt-6 hidden md:block text-xs text-primary/70">Hover away to flip back</p>

                <!-- Mobile close -->
                <label for={`pd-toggle-${categoryIndex}`} class="mt-6 inline-flex items-center gap-2 text-primary text-sm cursor-pointer md:hidden">
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10.78 9.72a.75.75 0 00-1.06 0L5.47 13.97a.75.75 0 001.06 1.06L10 11.56l3.47 3.47a.75.75 0 001.06-1.06L10.78 9.72z" clip-rule="evenodd" />
                  </svg>
                  <span>Back to details</span>
                </label>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Summary Statement -->
    <div class="row justify-center mt-16">
      <div class="lg:col-10 text-center">
        <div
          class="p-8 rounded-2xl bg-gradient-to-r from-primary/5 to-secondary/5 border border-primary/20"
          data-aos="zoom-in"
          data-aos-delay="600"
        >
          <h3 class="text-2xl font-bold text-primary mb-4">Key Differentiator</h3>
          <p class="text-lg text-dark dark:text-light font-medium italic">
            "We light a thousand little fires across your organization - empowering every individual, regardless of role, team, or seniority, to transform their work with AI. Not one big IT project, but personal growth for every employee."
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
