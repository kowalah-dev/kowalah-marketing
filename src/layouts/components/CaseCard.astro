---
import { markdownify } from "@/lib/utils/textConverter";
import { FaAngleRight } from "react-icons/fa6";
import DashedSeparator from "./DashedSeparator.astro";
import ImageMod from "./ImageMod.astro";

const { data } = Astro.props;
const { title, image } = data.data;
---

<div class="group rounded-2xl overflow-hidden mb-4">
  <ImageMod
    src={image}
    alt={title}
    width={391}
    height={259}
    class="aspect-[390/259] group-hover:scale-105 transition duration-500 w-full object-cover"
  />
</div>

<h4 set:html={markdownify(title)} class="h5 leading-normal" />

<div>
  <DashedSeparator />

  <a
    href={`/case-study/${data.id}`}
    class="text-text-dark hover:text-secondary transition duration-300"
  >
    Read Story <FaAngleRight className="ml-1 text-xs inline-block" />
  </a>
</div>
