---
import config from "@/config/config.json";
import ImageMod from "./ImageMod.astro";

const { src, customHeader }: { src?: string; customHeader?: boolean } =
  Astro.props;
const {
  logo,
  logo_width,
  logo_height,
  logo_text,
  logo_darkmode,
  title,
}: {
  logo: string;
  logo_width: any;
  logo_height: any;
  logo_text: string;
  logo_darkmode: string;
  title: string;
} = config.site;
---

<a href="/" class="navbar-brand inline-block">
  {
    src || logo || logo_darkmode ? (
      <>
        <ImageMod
          src={src ? src : customHeader ? logo_darkmode : logo}
          class="inline-block max-sm:!w-2/3 max-sm:!object-contain"
          width={logo_width.replace("px", "") * 2}
          height={logo_height.replace("px", "") * 2}
          alt={title}
          style={{
            height: logo_height.replace("px", "") + "px",
            width: logo_width.replace("px", "") + "px",
          }}
          format="webp"
        />
      </>
    ) : logo_text ? (
      logo_text
    ) : (
      title
    )
  }
</a>
