---
import config from "@/config/config.json";
import { FaLinkedinIn, FaXTwitter } from "react-icons/fa6";
import { IoLogoFacebook } from "react-icons/io5";

const { base_url }: { base_url: string } = config.site;
// Remove trailing slash to prevent double slashes in URLs
const cleanBaseUrl = base_url.replace(/\/$/, '');
const {
  title,
  description,
  slug,
  className,
}: { title?: string; description?: string; slug?: string; className?: string } =
  Astro.props;
---

<ul class={`${className}`}>
  <li class="inline-block">
    <a
      aria-label="twitter share button"
      href={`https://twitter.com/intent/tweet/?text=${title}&amp;url=${cleanBaseUrl}/${slug}`}
      target="_blank"
      rel="noreferrer noopener"
    >
      <FaXTwitter />
    </a>
  </li>
  <li class="inline-block">
    <a
      aria-label="facebook share button"
      href={`https://facebook.com/sharer/sharer.php?u=${cleanBaseUrl}/${slug}`}
      target="_blank"
      rel="noreferrer noopener"
    >
      <IoLogoFacebook />
    </a>
  </li>
  <li class="inline-block">
    <a
      aria-label="linkedin share button"
      href={`https://www.linkedin.com/shareArticle?mini=true&url=${cleanBaseUrl}/${slug}&title=${title}&summary=${description}&source=${cleanBaseUrl}`}
      target="_blank"
      rel="noreferrer noopener"
    >
      <FaLinkedinIn />
    </a>
  </li>
</ul>
