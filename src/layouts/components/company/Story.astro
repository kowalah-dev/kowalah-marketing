---
import { markdownify } from "@/lib/utils/textConverter";
import ImageMod from "../ImageMod.astro";

const { story } = Astro.props;
---

<section class="section">
  <div class="container">
    <div class="mb-14" data-aos="fade-up-sm" data-aos-delay="200">
      <p
        set:html={markdownify(story.subtitle)}
        class="mb-4 text-center text-sm"
      />
      <h2 set:html={markdownify(story.title)} class="h2 lg:h1 text-center" />
    </div>

    <div class="flex flex-col xl:flex-row gap-10 justify-between">
      <div class="w-full xl:w-[43%] flex flex-col gap-6" data-aos="fade-up-sm">
        <ImageMod
          src={story.image}
          alt="Charlie Cowan - Founder"
          width={490}
          height={559}
          class="mx-auto w-full rounded-3xl object-cover"
        />
        {story.quote && (
          <blockquote class="border-l-4 border-primary pl-6 py-4 italic text-lg text-text-dark bg-gradient-to-r from-primary/5 to-transparent rounded-r-lg">
            <p set:html={markdownify(story.quote)} />
          </blockquote>
        )}
      </div>

      <div class="w-full xl:w-[53%]">
        <p
          set:html={markdownify(story.content)}
          class="text-lg text-text-dark leading-relaxed max-xl:text-center"
          data-aos="fade-up-sm"
        />
      </div>
    </div>
  </div>
</section>
