---
import { markdownify } from "@/lib/utils/textConverter";
import {
  UserGroupIcon,
  FireIcon,
  SparklesIcon
} from '@heroicons/react/24/solid';

const { mission } = Astro.props;

// Map icon names to Heroicon components
const iconMap: Record<string, any> = {
  'profile': UserGroupIcon,
  'bullseye': FireIcon,
  'upward': SparklesIcon,
};
---

<section class="section relative overflow-hidden">
  <!-- Background Image with Overlay -->
  <div class="absolute inset-0 z-0">
    <img
      src="/images/company/mission-bg.png"
      alt=""
      class="w-full h-full object-cover"
    />
    <div class="absolute inset-0 bg-gradient-to-br from-black/60 via-black/50 to-black/60"></div>
  </div>

  <!-- Glassmorphism Container -->
  <div class="container relative">
    <!-- Glassmorphism Content Card -->
    <div class="max-w-6xl mx-auto backdrop-blur-xl bg-white/10 rounded-3xl p-8 md:p-12 lg:p-16 border border-white/20 shadow-2xl">
      <div class="mb-14" data-aos="fade-up-sm" data-aos-delay="200">
        <p
          set:html={markdownify(mission.subtitle)}
          class="mb-4 text-center text-sm text-white/80 uppercase tracking-wider"
        />
        <h2 set:html={markdownify(mission.title)} class="h2 lg:h1 text-center text-white" />
      </div>

      <div class="max-w-5xl mx-auto">
        <div class="flex max-xl:justify-center items-center mb-6">
          <div
            class="bg-primary rounded-full w-3 aspect-square mr-4"
            data-aos="fade-left-sm"
          >
          </div>
          <p set:html={markdownify(mission.badge)} data-aos="fade-left-sm" class="text-white/90" />
        </div>

        <p
          set:html={markdownify(mission.content)}
          class="text-lg text-white/90 mb-14 max-xl:text-center leading-relaxed"
          data-aos="fade-up-sm"
        />

        <div class="grid md:grid-cols-3 gap-8">
          {
            mission.points.map(
              (
                p: { icon: string; title: string; content: string },
                index: number
              ) => {
                const IconComponent = iconMap[p.icon];
                return (
                  <div class="text-center">
                    <div
                      class="w-fit mb-6 bg-white/5 backdrop-blur-sm border border-white/20 p-4 rounded-2xl mx-auto shadow-lg"
                      data-aos="fade-up-sm"
                      data-aos-delay={index * 100}
                    >
                      <IconComponent className="w-10 h-10 text-primary" />
                    </div>
                    <h3
                      set:html={p.title}
                      class="text-xl font-semibold text-white mb-3"
                      data-aos="fade-up-sm"
                    />
                    <p
                      set:html={p.content}
                      class="text-white/80"
                      data-aos="fade-up-sm"
                    />
                  </div>
                );
              }
            )
          }
        </div>
      </div>
    </div>
  </div>
</section>
