---
import { markdownify } from "@/lib/utils/textConverter";
import Button from "@/shortcodes/Button";
import dateFormat from "@/lib/utils/dateFormat";

interface Props {
  webinar: {
    title: string;
    slug: { current: string };
    date: string;
    shortDescription?: string;
    topics: string[];
    registrationLink?: string;
    duration?: string;
  };
}

const { webinar } = Astro.props;

// Null check
if (!webinar || !webinar.slug?.current || !webinar.date) {
  return null;
}

// Format date and time
const displayDate = dateFormat(webinar.date, "dd MMMM yyyy");
const displayTime = new Date(webinar.date).toLocaleTimeString('en-US', {
  hour: 'numeric',
  minute: '2-digit',
  hour12: true,
  timeZoneName: 'short'
});

// Detail page link
const detailLink = `/resources/wednesday-webinars/${webinar.slug.current}`;
---

<div
  class="upcoming-webinar-preview relative overflow-hidden rounded-xl border border-border/20 bg-white p-6 shadow-sm transition-all hover:shadow-lg hover:border-primary/30"
  data-aos="fade-up-sm"
>
  <!-- Weekly Series Badge -->
  <div class="mb-3">
    <span class="rounded-full bg-gradient-to-r from-primary to-secondary px-3 py-1 text-xs font-semibold text-white">
      Weekly Series
    </span>
  </div>

  <!-- Webinar Title with Link -->
  <a href={detailLink} class="group block">
    <h3
      set:html={markdownify(webinar.title)}
      class="mb-3 text-xl font-bold leading-tight group-hover:text-primary transition-colors"
    />
  </a>

  <!-- Date & Time -->
  <div class="mb-4 flex flex-col gap-2 text-sm">
    <div class="flex items-center gap-2">
      <svg
        class="h-4 w-4 text-primary"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
        ></path>
      </svg>
      <span class="font-medium text-dark">{displayDate}</span>
    </div>
    <div class="flex items-center gap-2">
      <svg
        class="h-4 w-4 text-primary"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
      <span class="text-dark/70">{displayTime}</span>
    </div>
  </div>

  <!-- Preview Topics (first 2) -->
  {webinar.topics && webinar.topics.length > 0 && (
    <div class="mb-5">
      <ul class="space-y-2">
        {webinar.topics.slice(0, 2).map((topic) => (
          <li class="flex items-start gap-2 text-sm">
            <svg
              class="mt-0.5 h-4 w-4 flex-shrink-0 text-primary"
              fill="currentColor"
              viewBox="0 0 20 20"
            >
              <path
                fill-rule="evenodd"
                d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                clip-rule="evenodd"
              />
            </svg>
            <span class="text-dark/70">{topic}</span>
          </li>
        ))}
        {webinar.topics.length > 2 && (
          <li class="text-sm text-primary font-medium ml-6">
            + {webinar.topics.length - 2} more topics...
          </li>
        )}
      </ul>
    </div>
  )}

  <!-- Registration CTA -->
  {webinar.registrationLink ? (
    <Button
      label="Register Now"
      link={webinar.registrationLink}
      style="outline"
      className="w-full !text-sm"
    />
  ) : (
    <Button
      label="View Details"
      link={detailLink}
      style="outline"
      className="w-full !text-sm"
    />
  )}
</div>
