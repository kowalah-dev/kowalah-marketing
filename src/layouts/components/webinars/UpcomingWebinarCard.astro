---
import { CalendarIcon, ClockIcon, CheckCircleIcon, UsersIcon } from "@heroicons/react/24/outline";
import { markdownify } from "@/lib/utils/textConverter";
import Button from "@/shortcodes/Button";
import CountdownTimer from "./CountdownTimer";

interface Props {
  webinar: {
    title: string;
    date: string;
    displayDate?: string;
    time: string;
    webinar_id?: string;
    registration_link: string;
    is_recurring?: boolean;
    description: string;
    topics: string[];
    structure: Array<{
      segment: string;
      duration: string;
      description: string;
    }>;
  };
}

const { webinar } = Astro.props;
---

<div
  class="upcoming-webinar-spotlight relative overflow-hidden rounded-2xl border-2 border-primary/20 bg-gradient-to-br from-primary/5 to-secondary/5 p-8 shadow-lg"
  data-aos="fade-up-sm"
>
  <!-- Recurring Badge -->
  {
    webinar.is_recurring && (
      <div class="mb-4 inline-block">
        <span class="rounded-full bg-gradient-to-r from-primary to-secondary px-4 py-1.5 text-sm font-semibold text-white">
          Weekly Series â€¢ Every Wednesday
        </span>
      </div>
    )
  }

  <!-- Webinar Title -->
  <h2
    set:html={markdownify(webinar.title)}
    class="mb-4 text-3xl font-bold md:text-4xl"
  />

  <!-- Date, Time & Countdown -->
  <div class="mb-6 flex flex-col gap-4 sm:flex-row sm:items-center sm:gap-8">
    <div class="flex items-center gap-2">
      <CalendarIcon class="h-5 w-5 text-primary" aria-hidden="true" />
      <span class="font-semibold">{webinar.displayDate || webinar.date}</span>
    </div>
    <div class="flex items-center gap-2">
      <ClockIcon class="h-5 w-5 text-primary" aria-hidden="true" />
      <span class="font-semibold">{webinar.time}</span>
    </div>
  </div>

  <!-- Countdown Timer -->
  <div class="mb-6">
    <CountdownTimer targetDate={webinar.date} client:load />
  </div>

  <!-- Description -->
  <p
    set:html={markdownify(webinar.description)}
    class="mb-6 text-lg text-dark/80"
  />

  <!-- Topics -->
  <div class="mb-6">
    <h3 class="mb-3 font-semibold">What You'll Learn:</h3>
    <ul class="space-y-2">
      {
        webinar.topics.map((topic) => (
          <li class="flex items-start gap-3">
            <CheckCircleIcon class="mt-0.5 h-5 w-5 flex-shrink-0 text-primary" aria-hidden="true" />
            <span set:html={markdownify(topic)} />
          </li>
        ))
      }
    </ul>
  </div>

  <!-- Session Structure -->
  <div class="mb-8 rounded-xl bg-white/50 p-6">
    <h3 class="mb-4 font-semibold">Session Format (60 minutes):</h3>
    <div class="space-y-3">
      {
        webinar.structure.map((segment) => (
          <div class="flex items-start gap-3">
            <span class="inline-flex h-8 w-[85px] flex-shrink-0 items-center justify-center rounded-full bg-gradient-to-r from-primary to-secondary text-sm font-semibold text-white whitespace-nowrap">
              {segment.duration}
            </span>
            <div class="flex-1">
              <p class="font-semibold">{segment.segment}</p>
              <p class="text-sm text-dark/70">{segment.description}</p>
            </div>
          </div>
        ))
      }
    </div>
  </div>

  <!-- Webinar ID (if provided) -->
  {
    webinar.webinar_id && (
      <p class="mb-6 text-sm text-dark/60">
        Webinar ID: <span class="font-mono">{webinar.webinar_id}</span>
      </p>
    )
  }

  <!-- Registration CTA -->
  <div class="flex flex-col gap-4 sm:flex-row sm:items-center">
    <Button
      label="Register for Free"
      link={webinar.registration_link}
      style="secondary"
      className="w-full sm:w-auto"
    />
    <p class="text-sm text-dark/70">
      <UsersIcon class="mr-1 inline h-4 w-4" aria-hidden="true" />
       Join other business leaders discovering advanced ChatGPT capabilities
    </p>
  </div>
</div>
