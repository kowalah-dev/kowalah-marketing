---
import { markdownify } from "@/lib/utils/textConverter";
import dateFormat from "@/lib/utils/dateFormat";

interface Props {
  title: string;
  date: string;
  status: "upcoming" | "completed" | "cancelled";
  topics?: string[];
  duration?: string;
}

const { title, date, status, topics = [], duration } = Astro.props;

// Format the date for display
const displayDate = dateFormat(date, "dd MMMM yyyy");
const displayTime = new Date(date).toLocaleTimeString('en-US', {
  hour: 'numeric',
  minute: '2-digit',
  hour12: true,
  timeZoneName: 'short'
});

// Status badge configuration
const statusConfig = {
  upcoming: {
    label: "Upcoming",
    bgColor: "bg-blue-100",
    textColor: "text-blue-700",
    borderColor: "border-blue-200"
  },
  completed: {
    label: "Completed",
    bgColor: "bg-green-100",
    textColor: "text-green-700",
    borderColor: "border-green-200"
  },
  cancelled: {
    label: "Cancelled",
    bgColor: "bg-red-100",
    textColor: "text-red-700",
    borderColor: "border-red-200"
  }
};

const statusStyle = statusConfig[status] || statusConfig.upcoming;
---

<section class="section relative overflow-hidden pt-20 pb-10">
  <!-- Background gradient -->
  <div class="absolute inset-0 bg-gradient-to-br from-primary/5 via-transparent to-secondary/5 -z-10"></div>

  <div class="container">
    <div class="row justify-center">
      <div class="lg:col-10">
        <!-- Breadcrumb -->
        <nav class="mb-6" data-aos="fade-up-sm">
          <ol class="flex items-center space-x-2 text-sm text-gray-500">
            <li><a href="/" class="hover:text-primary transition-colors">Home</a></li>
            <li><span class="mx-2">/</span></li>
            <li><a href="/resources/wednesday-webinars" class="hover:text-primary transition-colors">Wednesday Webinars</a></li>
            <li><span class="mx-2">/</span></li>
            <li class="text-text-dark">{title}</li>
          </ol>
        </nav>

        <!-- Status Badge -->
        <div class="mb-6" data-aos="fade-up-sm" data-aos-delay="100">
          <span class={`inline-flex items-center px-4 py-2 rounded-full text-sm font-medium border ${statusStyle.bgColor} ${statusStyle.textColor} ${statusStyle.borderColor}`}>
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
              {status === "upcoming" && (
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
              )}
              {status === "completed" && (
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              )}
              {status === "cancelled" && (
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
              )}
            </svg>
            {statusStyle.label}
          </span>
        </div>

        <!-- Title -->
        <h1
          set:html={markdownify(title)}
          class="mb-6 text-4xl md:text-5xl lg:text-6xl"
          data-aos="fade-up-sm"
          data-aos-delay="200"
        />

        <!-- Date and Duration -->
        <div class="flex flex-wrap items-center gap-4 mb-8 text-lg text-gray-600" data-aos="fade-up-sm" data-aos-delay="300">
          <div class="flex items-center">
            <svg class="w-5 h-5 mr-2 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            <span>{displayDate}</span>
          </div>
          <div class="flex items-center">
            <svg class="w-5 h-5 mr-2 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span>{displayTime}</span>
          </div>
          {duration && (
            <div class="flex items-center">
              <svg class="w-5 h-5 mr-2 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
              <span>{duration}</span>
            </div>
          )}
        </div>

        <!-- Topics -->
        {topics && topics.length > 0 && (
          <div class="flex flex-wrap gap-2" data-aos="fade-up-sm" data-aos-delay="400">
            {topics.map((topic) => (
              <span class="inline-block px-4 py-2 bg-white border border-gray-200 rounded-full text-sm font-medium text-gray-700 hover:border-primary transition-colors">
                {topic}
              </span>
            ))}
          </div>
        )}
      </div>
    </div>
  </div>
</section>
