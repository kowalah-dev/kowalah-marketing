---
import { markdownify } from "@/lib/utils/textConverter";

interface UseCase {
  scenario: string;
  challenge: string;
  solution: string;
  outcome: string;
}

interface Props {
  title: string;
  items: UseCase[];
}

const { title, items }: Props = Astro.props;
const linkClasses = "[&_a]:text-primary [&_a]:underline [&_a]:underline-offset-2 [&_a]:hover:text-secondary [&_a]:transition-colors";
---

<section class="section bg-body/60">
  <div class="container">
    <div class="row justify-center text-center">
      <div class="col-12 lg:col-10">
        <h2
          class="h2 mb-10 text-transparent bg-clip-text bg-gradient-to-r from-primary to-secondary"
          data-aos="fade-up-sm"
        >
          {title}
        </h2>
      </div>
    </div>

    <div class="row g-6 gap-y-10 lg:gap-y-14">
      {items.map((item, index) => (
        <div
          class="col-12 lg:col-4"
          data-aos="fade-up-sm"
          data-aos-delay={120 + index * 60}
        >
          <div class="h-full rounded-3xl border border-border/30 bg-white/[0.03] p-7">
            <p class="text-xs font-semibold uppercase tracking-[0.35em] text-transparent bg-clip-text bg-gradient-to-r from-primary to-secondary mb-3">
              Use Case
            </p>
            <h3 class="text-xl font-semibold text-text-dark mb-4">{item.scenario}</h3>
            <div class="space-y-3 text-sm text-text-dark/75">
              <p class={linkClasses}>
                <strong class="text-text-dark">Challenge:</strong> <span set:html={markdownify(item.challenge)}></span>
              </p>
              <p class={linkClasses}>
                <strong class="text-text-dark">Solution:</strong> <span set:html={markdownify(item.solution)}></span>
              </p>
              <p class={linkClasses}>
                <strong class="text-text-dark">Outcome:</strong> <span set:html={markdownify(item.outcome)}></span>
              </p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
