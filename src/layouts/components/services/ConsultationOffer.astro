---
import Button from "@/shortcodes/Button";

interface CTA {
  label: string;
  link: string;
}

interface Offer {
  title: string;
  description: string;
  duration?: string;
  cta: CTA;
}

interface Props {
  title: string;
  subtitle: string;
  description: string;
  primaryCta: CTA;
  offer: Offer;
}

const { title, subtitle, description, primaryCta, offer }: Props = Astro.props;
---

<section class="section">
  <div class="container">
    <div class="row justify-center text-center">
      <div class="col-12 lg:col-8" data-aos="fade-up-sm">
        <h2 class="h2 mb-4">{title}</h2>
        <p class="text-lg text-text-dark/80 mb-6">{subtitle}</p>
        <p class="text-base text-text-dark/80 mb-6">{description}</p>
        <Button
          label={primaryCta.label}
          link={primaryCta.link}
          style="primary"
          target="_self"
          className="w-full max-w-xs mx-auto"
        />
      </div>
    </div>

    <div class="row justify-center mt-12">
      <div class="col-12 lg:col-8" data-aos="fade-up-sm" data-aos-delay="100">
        <div class="rounded-3xl border border-secondary/30 bg-secondary/10 p-8 text-left">
          <div class="flex flex-col gap-4 md:flex-row md:justify-between md:items-start">
            <div>
              <p class="text-xs font-semibold uppercase tracking-[0.35em] text-secondary/70 mb-2">
                Complimentary Assessment
              </p>
              <h3 class="text-2xl font-semibold text-text-dark mb-3">{offer.title}</h3>
              <p class="text-sm text-text-dark/80 mb-4">{offer.description}</p>
              {offer.duration && (
                <p class="text-sm font-medium text-secondary">Duration: {offer.duration}</p>
              )}
            </div>
            <Button
              label={offer.cta.label}
              link={offer.cta.link}
              style="outline"
              target="_self"
              className="w-full max-w-xs"
            />
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
