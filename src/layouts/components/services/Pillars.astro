---
import { markdownify } from "@/lib/utils/textConverter";

interface Pillar {
  title: string;
  icon?: string;
  description: string;
  details: string[];
  value_proposition: string;
}

interface Props {
  title: string;
  items: Pillar[];
}

const { title, items }: Props = Astro.props;
const linkClasses = "[&_a]:text-primary [&_a]:underline [&_a]:underline-offset-2 [&_a]:hover:text-secondary [&_a]:transition-colors";
---

<section class="section">
  <div class="container">
    <div class="row justify-center text-center">
      <div class="col-12 lg:col-10">
        <h2 class="h2 mb-10" data-aos="fade-up-sm">{title}</h2>
      </div>
    </div>

    <div class="row g-6">
      {items.map((item, index) => (
        <div
          class="col-12 lg:col-4 mb-6"
          data-aos="fade-up-sm"
          data-aos-delay={100 + index * 60}
        >
          <div class="flex h-full flex-col rounded-3xl border border-border/30 bg-white/[0.03] p-8">
            <h3 class="text-xl font-semibold text-text-dark mb-4">{item.title}</h3>
            <p class={`text-sm text-text-dark/75 mb-6 ${linkClasses}`} set:html={markdownify(item.description)}></p>
            <ul class="mb-6 space-y-3 text-sm text-text-dark/75">
              {item.details.map((detail) => (
                <li class="flex gap-3">
                  <span class="mt-1 inline-block h-2.5 w-2.5 flex-shrink-0 rounded-full bg-secondary"></span>
                  <span class={linkClasses} set:html={markdownify(detail)}></span>
                </li>
              ))}
            </ul>
            <div class={`mt-auto rounded-2xl border border-secondary/30 bg-secondary/10 p-4 text-sm text-text-dark/80 ${linkClasses}`}>
              <strong class="block text-secondary mb-2">Why it matters</strong>
              <span set:html={markdownify(item.value_proposition)}></span>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
